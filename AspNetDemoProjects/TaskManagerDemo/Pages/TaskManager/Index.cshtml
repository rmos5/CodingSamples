@page
@model TaskManagerDemo.Pages.TasksManager.IndexModel

@{
    ViewData["Title"] = "Tasks";
}

<h2>Tasks</h2>
<hr />
<form method="get" autocomplete="off" class="col-md-3 form-inline">
    <input asp-for="PageSize" type="hidden" />
    <input asp-for="PageNum" type="hidden" />
    <div class="input-group input-group-sm">
        <span class="input-group-addon">
            <input asp-for="Contains" type="checkbox" title="Contains(checked) or Starts with" />
        </span>
        <input asp-for="Filter" type="text" class="form-group form-control" placeholder="Task name..." />
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </span>
    </div>
</form>
@Html.DisplayFor(m => Model.TaskInfos, "_TaskInfoList")
