@page "{id}"
@model TaskManagerDemo.Pages.TaskManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TaskInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskInfo.Id" />
            <input type="hidden" asp-for="TaskInfo.Timestamp" />
            <div class="form-group">
                <label asp-for="TaskInfo.Name" class="control-label"></label>
                <input asp-for="TaskInfo.Name" class="form-control" />
                <span asp-validation-for="TaskInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskInfo.Description" class="control-label"></label>
                <textarea asp-for="TaskInfo.Description" class="form-control"></textarea>
                <span asp-validation-for="TaskInfo.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="TaskInfo.ParentTaskId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

<h4>Changes</h4>
@Html.DisplayFor(m => m.TaskInfo.ModifyInfosSorted, "_ModifyInfoList")

