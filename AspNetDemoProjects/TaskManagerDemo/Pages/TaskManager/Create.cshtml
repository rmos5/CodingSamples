@page "{parentTaskId?}"
@model TaskManagerDemo.Pages.TaskManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TaskInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="TaskInfo.ParentTask" class="control-label"></label>
            <input asp-for="TaskInfo.ParentTask.Name" class="form-control" readonly />
        </div>
        <form method="post" autocomplete="off">
            <input asp-for="TaskInfo.ParentTaskId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskInfo.Name" class="control-label"></label>
                <input asp-for="TaskInfo.Name" class="form-control" />
                <span asp-validation-for="TaskInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskInfo.Description" class="control-label"></label>
                <textarea asp-for="TaskInfo.Description" class="form-control"></textarea>
                <span asp-validation-for="TaskInfo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

